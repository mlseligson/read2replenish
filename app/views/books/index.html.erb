<h1>All the books</h1>

<div style="margin-bottom: 20px;">
  <input type="button" onclick="javascript:window.location='/books/new'" value="Add new book"</input>
</div>

<table class="index">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Author</th>
    <th>Date Published</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><a href="books/<%= book.id %>"><%= book.title %></a></td>
      <td><%= book.author %></td>
      <td><%= book.date_published %></td>
    </tr>
  <% end %>
</table>